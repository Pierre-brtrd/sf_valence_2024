{% extends 'base.html.twig' %}

{% block title %}
	Admin des users
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="container mt-2">
		<h1 class="text-center">Administration des users</h1>
		<a href="{{ path('app.register') }}" class="btn btn-primary">Cr√©er un utilisateur</a>
		<div class="row mt-2 gy-4">
			{% for user in users %}
				<div class="col-md-4">
					<div class="card">
						<h4>
							{{ user.fullName }}
						</h4>
						<p>
							Email:
							{{ user.email }}
						</p>
						<p>
							Roles:
							{{ user.roles|join(', ')|replace({'ROLE_': ''})|title }}
						</p>
						<div class="card-btn">
							<a href="{{ path('admin.users.update', {id: user.id}) }}" class="btn btn-warning">Modifier</a>
							<a href="#" class="btn btn-danger">Supprimer</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</section>
{% endblock %}
